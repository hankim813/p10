<div class="album-container">
	<p><%= @album.title %> by <%= @album.user.nickname %></p>
	<p><%= @album.description %></p>
	<p><%= @album.location %></p>
  <% @album.photos.each do |photo| %>
    <div class="photo-container">
    	<img src="<%= photo.src %>" alt="<%= photo.caption %>" width="100%;">
    	<p><%= photo.caption %></p>
    	<p>Taken: <%= photo.location %></p>
    	<p>By: <%= photo.user.nickname %></p>
    	<p>Album: <%= photo.album %></p>
    	<p>Tags:</p> 
    		<% photo.tags.each do |tag| %>
    			<p>#<%= tag.word %></p>
    		<% end %>
    	<a href="/families/<%= current_family.id %>/photos/<%= photo.id %>/show">view photo</a>
    	<% if authenticate_current_user_access_to(photo) %>
    		<a href="/families/<%= current_family.id %>/users/<%= photo.user.id %>/photos/<%= photo.id %>/edit">edit photo</a>
    		<form action="/families/<%= current_family.id %>/users/<%= photo.user.id %>/photos/<%= photo.id %>/delete" method="post">
    			<input type="hidden" name="_method" value="delete">
    			<input type="submit" value="delete photo">
    		</form>
    	<% end %>
    </div>
  <% end %>
	<% if authenticate_current_user_access_to(@album) %>
	  <a href="/families/<%= current_family.id %>/users/<%= @album.user.id %>/albums/<%= @album.id %>/edit">edit album</a>
	  <form action="/families/<%= current_family.id %>/users/<%= @album.user.id %>/albums/<%= @album.id %>/delete" method="post">
	    <input type="hidden" name="_method" value="delete">
	    <input type="submit" value="delete">
	  </form>
	<% end %>
</div>