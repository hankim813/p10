<div class="album-container">
	<div class="upload-menu" id="upload-menu">
		<a href="/families/<%= current_family.id %>/posts/new"><i class="fa fa-pencil"></i> post</a>
		<a href="/families/<%= current_family.id %>/polls/new" id="upload-poll"><i class="fa fa-pie-chart"></i> poll</a>
		<a href="/families/<%= current_family.id %>/albums/new" id="upload-album"><i class="fa fa-book"></i> album</a>
		<a href="/families/<%= current_family.id %>/photos/new" id="upload-photo"><i class="fa fa-camera-retro"></i> photo</a>
		<a href="#" id="close"><i class="fa fa-times"></i></a>
	</div>
	<h2>share a new album</h2>

	<form action='/families/<%= @family.id %>/albums/new' method='post'>
		<div class="form-field">
		  <label for='album-title'>Title</label>
		  <input type="text" name="album[title]" id="album-title" />
		</div>
		<div class="form-field">
		  <label for='album-description'>Description</label>
		  <input type="text" name="album[description]" id="album-description" />
		</div>
		<div class="form-field">
		  <label for='album-location'>Location</label>
		  <input type="text" name="album[location]" id="album-location" />
		</div>
		<div class="form-field">
			<label for='album-tag'>Tags</label>
			<input type="text" name="tags" id="album-tag" placeholder="separate tags by comma">
		</div>
	  <button type='submit'>create</button>
	</form>
</div>
