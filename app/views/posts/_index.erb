<% @posts.each do |post| %>
  <div class="post-container">
    <p><%= post.parsed_html %></p>
    <p>by <%= post.user.nickname %></p>
    <a href="/families/<%= current_user.family.id %>/posts/<%= post.id %>/show">view post</a> |
    <a href="/families/<%= current_user.family.id %>/posts/<%= post.id %>/edit">edit post</a>
    <% post.comments.each do |comment| %>
      <% if comment.parent_comment.nil? %>
        <div class="comment-container">
          <%= comment.description %> by <%= comment.user.nickname %> <a href="/families/<%= current_user.family.id %>/comments/<%= comment.id %>/edit">edit comment</a>
          <form action="/families/<%= current_user.family.id %>/posts/<%= post.id %>/comments/<%= comment.id %>/delete" method="post">
            <input type="hidden" name="_method" value="delete">
            <input type="submit" value="delete comment">
          </form>
          <form action="/families/<%= current_user.family.id %>/posts/<%= post.id %>/comments/<%= comment.id %>/reply" method="post">
            <input type="text" name="description">
            <input type="submit" value="reply">
          </form>
          </div>
      <% end %>
        <% comment.replies.each do |reply| %>
          <div class="reply-container">
            <%= reply.description %> by <%= reply.user.nickname %>
            <a href="/families/<%= current_user.family.id %>/comments/<%= reply.id %>/edit">edit comment</a>
          </div>
        <% end %>
    <% end %>
    <form action="/families/<%= current_user.family.id %>/posts/<%= post.id %>/delete" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="delete">
    </form>
    <form action="/families/<%= current_user.family.id %>/posts/<%= post.id %>/comments/new" method="post">
      <input type="text" name="description">
      <input type="submit" value="comment">
    </form>
  </div>
<% end %>
