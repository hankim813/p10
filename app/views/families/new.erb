<h1>create a new circle for your family</h1>

<form action="/families/new" method="post">
  <div class="form-field">
    <label class="label" for="name">Family Name</label>
    <input type="text" name="family[name]">
  </div>
  <div class="form-field">
    <label class="label" for="slogan">Family Slogan</label>
    <input type="text" name="family[slogan]">
  </div>
  <div class="form-field">
    <label class="label" for="hometown">Hometown</label>
    <input type="text" name="family[hometown]">
  </div>
  <div class="form-field">
    <label class="label" for="homestate">Homestate</label>
    <input type="text" name="family[homestate]">
  </div>
  <div class="form-field">
    <label class="label" for="homecountry">Home Country</label>
    <input type="text" name="family[homecountry]">
  </div>
  <input type="submit" value="Create the Family Circle">
</form>
