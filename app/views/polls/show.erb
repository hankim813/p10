<div class="poll-container">
  <p><%= @poll.question %> by <%= @poll.user.nickname %></p>
  <p><%= @poll.description %></p>
  <p>expired: <%= @poll.expired %></p>
  <ul>
    <% @poll.options.each do |option| %>
      <li><%= option.description %></li>
    <% end %>
  </ul>
  <a href="/families/<%= current_user.family.id %>/polls/<%= @poll.id %>/edit">edit poll</a>
  <form action="/families/<%= current_user.family.id %>/polls/<%= @poll.id %>/delete" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="delete">
  </form>
</div>

<a href="/families/<%= current_user.id %>/show">back</a>
