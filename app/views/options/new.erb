<h1>add some options</h1>
<p><%= @poll.question %></p>
<p><%= @poll.description %></p>
<% @poll.tags.each do |tag|%>
  <p>#<%= tag.word %></p>
<% end %>
<ul>
  <% @poll.options.each do |option| %>
  <li><%= option.description %></li>
  <% end %>
</ul>

<form action="/families/<%= current_user.family.id %>/polls/<%= @poll.id %>/options/new" method="post">
  <label for="description">Description</label>
  <input type="text" name="description" autofocus>
  <input type="submit" value="add">
</form>

<a href="/families/<%= current_user.family.id %>/show">done</a>

